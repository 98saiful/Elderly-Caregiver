<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_guide_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="transition"/>

        <TextView
            android:id="@+id/tv_guide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_common"
            android:fontFamily="@font/product_sans_regular"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_guide_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_common"
            android:layout_marginRight="@dimen/dimen_common"
            android:fontFamily="@font/product_sans_regular"
            android:text="Description"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>